<Window x:Class="RobotSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobotSharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="CameraImage" Stretch="Uniform"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="StartStopButton" Content="начать" 
                Width="91" Height="26" Margin="20,20,0,0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Click="StartStopButton_Click" RenderTransformOrigin="0.501,0.553">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.001"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.003"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
